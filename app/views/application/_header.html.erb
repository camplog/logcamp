<ul>
  <% if current_user %>
    Welcome <%= link_to current_user.full_name, profile_path %>,
    <li><%= link_to "#{t 'sessions.sign_out'}", logout_path %></li>
  <% else %>
    <li><%= link_to "#{t 'sessions.sign_in'}", login_path %></li> |
    <li><%= link_to "#{t 'sessions.sign_up'}", signup_path %></li>
  <% end %>
</ul>