<%= content_tag_for :tr, event do %>
  <td style="width:15%;"><%= status_tag event.status, level: "#{event.status}" %></td>
  <td style="width:80%;"><%= event.message %></td>
  <td style="width:5%;"><%= icon_tag 'menu' %></td>
<% end %>

<%= content_for :div, event, class: 'pure-g' do %>
  <div class="pure-u-1 pure-u-md-1-3">
  	<%= status_tag event.status, level: "#{event.status}" %>
  </div>
  <div class="pure-u-1 pure-u-md-1-3">
    <%= event.message %>
  </div>
  <div class="pure-u-1 pure-u-md-1-3">
    <%= icon_tag 'menu' %>
  </div>
<% end %>