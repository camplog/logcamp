<%= page_title t('passwords.reset') %>

<div class="content">
  <%= simple_form_for(:password, url: password_path, method: :post, html: {class: "form-signin"}) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, label: false, autofocus: true %>
    <p><%= f.button :submit, t('passwords.send_reset_instructions'), class: "btn btn-lg btn-primary btn-block" %></p>
  <% end %>
</div>