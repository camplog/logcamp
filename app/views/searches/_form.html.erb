
<%= simple_form_for(@search) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name %>
    <div class="pure-control-group string required search_name">
      <label>Color</label>
      <ul class="color-picker">
        <% %W(orange light-blue red green grey black purple).each do |color| %>
          <li>
            <label>
              <input type="radio" value="<%= color %>" name="search[color]"/>
              <span>
                <i class="icon-checkmark"></i>
              </span>
            </label>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
