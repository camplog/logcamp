<%= simple_form_for(@user, url: registrations_path, html: {class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading"><%= t 'sessions.sign_up' %></h2>
  <%= render 'flash' %>
  <%= f.error_notification %>

  <%= f.input :email, autofocus: true, placeholder: false %>
  <%= f.input :full_name %>
  <%= f.input :password, placeholder: false %>
  <%= f.input :password_confirmation, placeholder: false %>

  <p><%= f.button :submit, "#{t 'sessions.sign_up'}", class: "btn btn-lg btn-primary btn-block" %></p>

  <!-- <p class="center">or <%#= link_to "#{t 'sessions.login_with_github'}", 'auth/github' %></p> -->
<% end %>